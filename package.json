{
  "name": "@tokenysolutions/t-rex",
  "version": "4.0.0-beta1",
  "description": "A fully compliant environment for the issuance and use of tokenized securities.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "build",
    "contracts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "truffle compile && truffle-flattener contracts/token/Token.sol > build/Token.sol && truffle-flattener contracts/registry/implementation/IdentityRegistry.sol > build/IdentityRegistry.sol && truffle-flattener contracts/registry/implementation/IdentityRegistryStorage.sol > build/IdentityRegistryStorage.sol && truffle-flattener contracts/registry/implementation/ClaimTopicsRegistry.sol > build/ClaimTopicsRegistry.sol && truffle-flattener contracts/registry/implementation/TrustedIssuersRegistry.sol > build/TrustedIssuersRegistry.sol && truffle-flattener contracts/DVD/DVDTransferManager.sol > build/DVDTransferManager.sol && truffle-flattener contracts/compliance/modular/ModularCompliance.sol > build/ModularCompliance.sol && truffle-flattener contracts/proxy/authority/TREXImplementationAuthority.sol > build/TREXImplementationAuthority.sol && truffle-flattener contracts/DVD/TestERC20.sol > build/TestERC20.sol && truffle-flattener contracts/proxy/ModularComplianceProxy.sol > build/ModularComplianceProxy.sol",
    "coverage": "truffle run coverage",
    "coverage:ownerManager": "truffle run coverage --file=\"test/ownerManager.test.js\"",
    "coverage:agentManager": "truffle run coverage --file=\"test/agentManager.test.js\"",
    "coverage:token": "truffle run coverage --file=\"test/tokenTransfer.test.js\"",
    "coverage:registry": "truffle run coverage --file=\"test/registry.test.js\"",
    "coverage:identity": "truffle run coverage --file=\"test/identity.test.js\"",
    "coverage:dvd": "truffle run coverage --file=\"test/dvd.test.js\"",
    "coverage:compliance": "truffle run coverage --file=\"test/compliance.test.js\"",
    "coverage:factory": "truffle run coverage --file=\"test/factory.test.js\"",
    "test": "truffle test",
    "test:compliance": "truffle test ./test/compliance.test.js",
    "test:factory": "truffle test ./test/factory.test.js",
    "test:ownerManager": "truffle test ./test/ownerManager.test.js",
    "test:agentManager": "truffle test ./test/agentManager.test.js",
    "test:token": "truffle test ./test/tokenTransfer.test.js",
    "test:registry": "truffle test ./test/registry.test.js",
    "test:identity": "truffle test ./test/identity.test.js",
    "test:dvd": "truffle test ./test/dvd.test.js",
    "lint:js": "eslint \"test/*.js\"",
    "lint:js-fix": "eslint \"test/*.js\" --fix",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "docs": "solidity-docgen --solc-settings \"{remappings: ['openzeppelin-solidity=$PWD/node_modules/openzeppelin-solidity', '@onchain-id=$PWD/node_modules/@onchain-id']}\"",
    "prepare": "husky install",
    "test:avalanche": "truffle test --config=truffle-config.js --network=$npm_config_network",
    "compile:avalanche": "truffle compile --config=truffle-config.js",
    "migrate:avalanche": "truffle migrate --config=truffle-config.js --network=$npm_config_network"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TokenySolutions/T-REX.git"
  },
  "author": "Tokeny Solutions",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/TokenySolutions/T-REX/issues"
  },
  "homepage": "https://github.com/TokenySolutions/T-REX#README",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@onchain-id/solidity": "^2.0.0-beta-2",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eth-create2-calculator": "^1.1.5",
    "eth-gas-reporter": "^0.2.25",
    "ganache": "^7.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.5.16",
    "truffle": "^5.4.8",
    "truffle-flattener": "^1.6.0",
    "truffle-plugin-verify": "^0.6.0",
    "web3": "^1.7.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.1.2",
    "dotenv": "^16.0.3",
    "truffle-hdwallet-provider": "^1.0.17",
    "update-json-file": "^1.1.1"
  }
}
